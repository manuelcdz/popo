<!DOCTYPE html>
<html>
<meta charset="utf-8" />
<head>
<link rel="stylesheet"
href="https://unpkg.com/leaflet@1.6.0/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet@1.6.0/dist/leaflet.js"></script>

<style>
 #map {
 width: 100%;
 height: 600px;
 box-shadow: 5px 5px 5px #888;
}
.info {
padding: 6px 8px;
font: 14px/16px Arial, Helvetica, Tahoma;
background: white;
background: rgba(205,255,25,1);
box-shadow: 0 0 15px rgba(0,0,0,0.2);
border-radius: 5px;
}
.info h2 {
margin: 0 0 5px;
color: #312;
}
</style>
</head>
 <body>
 <div id="map"></div>
 <script>
 var map = L.map('map', {
center: [41.66, -4.72],
zoomControl: false,
zoom: 7
}); 

var osm = L.tileLayer('https://api.tiles.mapbox.com/v4/{id}/{z}/{x}/{y}.png?access_token=pk.eyJ1IjoibWFwYm94IiwiYSI6ImNpejY4NXVycTA2emYycXBndHRqcmZ3N3gifQ.rJcFIG214AriISLbB6B5aw', {
            maxZoom: 18,
            attribution: 'Map data &copy; <a href="http://openstreetmap.org">OpenStreetMap</a> contributors, ' +
                '<a href="http://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, ' +
                'Imagery © <a href="http://mapbox.com">Mapbox</a>',
            id: 'mapbox.outdoors'
        }).addTo(map);	
		
		
var pantanos = L.tileLayer.wms("http://localhost:8080/geoserver/wms", {
 layers: 'pantanos',
 color: 'red',
 format: 'image/png',
 transparent: true,
 tiled: true,
 attribution: "Natural Earth"
}).addTo(map);






	
var demarcacion = L.tileLayer.wms("http://localhost:8080/geoserver/wms", {
 layers: 'limites_demarcacionpolygon',
 format: 'image/png',
 transparent: true,
 tiled: true,
 attribution: "Natural Earth"
}).addTo(map);


var seg_rios = L.tileLayer.wms("http://localhost:8080/geoserver/wms", {
 layers: 'segmentos_rioline',
 format: 'image/png',
 transparent: true,
 tiled: true,
 attribution: "Natural Earth"
}).addTo(map);

var myStyle = {
 'color': "#000777",
 'weight': 2,
 'opacity': 0.9,
 'fillOpacity': 0.7,
 'fillColor':'#773217'
};	

var embalses = L.geoJson(embalses, {
style: myStyle
}).addTo(map);


var Cadiz = L.icon({     
 iconUrl: 'https://image.flaticon.com/icons/svg/503/503080.svg',     
 iconSize: [16, 16],    
 popupAnchor: [-1, -10] }); 

 var markerCadiz = L.marker([37.61, -1.70], {icon: Cadiz}) 
 .addTo(map) 
 .bindPopup("Cádiz, intervalos nubosos</b>"); 



// Insertando un título 
var title = L.control();
title.onAdd = function (map) {
 var div = L.DomUtil.create('div', 'info');
 div.innerHTML +=
   '<h2>Confederación Hidrogáfica del Duero</h2>Visor cartográfico';
 return div;
};
title.addTo(map);

//Insertando un control de capas
var baseMaps = {
  "Mapbox": osm
};
var overlayMaps = {
   "Demarcación": demarcacion,
   "Ríos": seg_rios,
   "Embalses": embalses,
   "pantanos": pantanos
   
};
L.control.layers(baseMaps, overlayMaps,{
    position: 'topright', 
    collapsed: false 
}).addTo(map);

// Insertando una escala 
L.control.scale({
 metric: true,
 imperial: false,
 maxWidth: 175
}).addTo(map);

// Insertando zoom
var zoomOptions = {
            zoomInText: '⇑',
            zoomOutText: '⇓	',
         };
         var zoom = L.control.zoom(zoomOptions);   
         zoom.addTo(map);   


</script>
</body>
</html>
